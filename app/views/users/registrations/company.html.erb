

<div class="container">
    <div class="row">
      <div class="signin__visual"></div>
  </div>
</div>
<div class="container">
    <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
    <%= render "users/shared/error_messages", resource: resource %>
    <div class="row">
      <div class="form-group col-3">
      <label for="InputName">名前</label>
      <%= f.text_field :name, autofocus: true, class:"form-control form-control-lg", autocomplete: "name" %>
      </div>

      <div class="form-group col-3">
      <label for="InputEmail">メールアドレス</label>
      <%= f.email_field :email, autofocus: true, class:"form-control form-control-lg", autocomplete: "email" %>
      </div>

      <%= f.fields_for :company_user do |company| %>
      <div class="form-group col-3">
      <label for="InputCompanyUrl">企業URL</label>
      <%= company.text_field :company_url,class:"form-control form-control-lg", autocomplete: "off" %>
      </div>

      <div class="form-group col-3">
      <label for="InputPhoneNumber">電話番号</label>
      <%= company.text_field :phone_number, class:"form-control form-control-lg", autocomplete: "off" %>
      </div>
      <% end %>
    </div>

    <div class="row">
      <div class="form-group col-6">
      <label for="InputPassword">パスワード</label>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, class:"form-control form-control-lg", autocomplete: "new-password" %>
      </div>

      <div class="form-group col-6">
      <label for="InputPasswordConfirmation">パスワードの確認</label>
      <%= f.text_field :password_confirmation, autofocus: true, class:"form-control form-control-lg", autocomplete: "password_confirmation" %>
      </div>
    </div>

    <div class="row">
      <div class="form-group col-12">
      <label for="InputName">紹介文</label>
      <%= f.text_field :description, autofocus: true, class:"form-control form-control-lg", autocomplete: "description" %>
      </div>
    </div>

    <div class="row">
      <div class="form-group pl-3">
        <%= f.submit "新規登録", class:"btn btn-outline-primary" %>
      </div>
      <% end %>
      <div class="form-group pl-2">
        <%= link_to "ログイン", new_user_session_path, class:"btn btn-outline-primary" %>
      </div>
    </div>
</div>


