<div class="container">
  <div class="row">
    <div class="col-12 p-2">
      <p class="text-center">
        <i class="fas fa-user-shield fa-7x"></i>
      </p>
    </div>
  </div>
</div>


<div class="container">
    <div class="row">
    <%= form_with model:@admin, url: session_path(resource_name), class: "form-signin", local:true do |f| %>
      <div class="form-group">
      <label for="InputEmail1">メールアドレス</label>
      <%= f.email_field :email, autofocus: true,class:"form-control form-control-lg", autocomplete: "email" %>
    </div>

    <div class="form-group">
      <label for="InputPassword">パスワード</label>
      <%= f.password_field :password,class:"form-control form-control-lg", autocomplete: "current-password" %>
    </div>
    
    <div class="form-group">
      <%= f.submit "ログイン", class:"btn btn-outline-primary" %>
      <%= link_to "ホームに戻る", root_path, class:"btn btn-outline-success" %>
    </div>
  <% end %>
  </div>
</div>