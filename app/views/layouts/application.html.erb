<!DOCTYPE html>
<html>
  <head>
    <title>だげほー</title>
    <%= favicon_link_tag('logo.png') %>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <script src="https://kit.fontawesome.com/93f4e77202.js" crossorigin="anonymous"></script>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%# if user_signed_in? %>
    <div class="container__heder">
      <div class="heder">
        <h1>だげほー</h1>
        <div class="heder_menu">
          <nav>
            <ul>
              <li class="nav-item"><%= link_to "マイページ", root_path, class:"nav-link" %></li>
              <li class="nav-item"><%= link_to "新規投稿", root_path, class:"nav-link" %></li>
              <li class="nav-item"><%= link_to "投稿記事一覧", root_path, class:"nav-link" %></li>
              <li class="nav-item"><%= link_to "DM一覧", root_path, class:"nav-link" %></li>
              <li class="nav-item"><%= link_to "ログアウト", destroy_user_session_path, method: :delete, class:"nav-link" %></li>
            </ul>
          </nav>
        </div>
      </div>
    </div>
    <%# end %>
    <%= yield %>
    <footer　class="bg-white shadow text-center text-lg-start">
      <div class="fixed-bottom text-center p-3 bg-light">
        だげほー
      </div>
    </footer>
  </body>
</html>
