<div class="main-visual">
  <div class="main-visual__content--singin ">
    <% unless user_signed_in? || admin_signed_in? %>
        <%= link_to "ログイン", new_user_session_path, class:"btn btn-outline-primary" %>
        <%= link_to "学生の方", new_user_registration_path, class:"btn btn-outline-primary" %>
        <%= link_to "企業の方", new_company_path, class:"btn btn-outline-primary" %>
    <% end %>
  </div>
</div>
<div class="main p-5">
  <div class="container-fluid">
    <div class="card-deck">
      <div class="card">
        <div class="card-body">
          <i class="fas fa-american-sign-language-interpreting fa-7x"></i>
          <h5 class="card-title">台湾での生活</h5>
          <p class="card-text">アルバイト情報や勉強の仕方イベント情報などみんなで共有して最高の留学生活にしましょう</p>
        </div>
      </div>
      <div class="card">
        <div class="card-body">
          <i class="fas fa-atom fa-7x"></i>
          <h5 class="card-title">コミュニティーを広げよう</h5>
          <p class="card-text">同じ志を持った者同士仲良くしましょう</p>
        </div>
      </div>
      <div class="card">
        <div class="card-body">
          <i class="fab fa-angrycreative fa-7x"></i>
          <h5 class="card-title">積極的に質問しよう</h5>
          <p class="card-text">礼儀を大切に質問しましょう</p>
        </div>
      </div>
    </div>
  </div>
</div>
<% if user_signed_in? %>
<div class= "index">
  <div class="container-fluid">
    <div class="row">
      <div class="col-3 ">
        <div class="index__genre text-center">
          <% @genres.each do |genre| %>
          <%= link_to genre_path(genre) do %>
          <div class="genre_image p-1">
            <% if genre.image.attached? %>
              <%= image_tag genre.image,  style: "object-fit: cover; width: 100%; height: 103px;" %>
            <% else %>
              <%= image_tag 'logo.png', style: "object-fit: cover; width: 100%; height: 100px;" %>
            <% end %>
          <% end %>
          </div>
          <% end %>
        </div>
        </div>
      <div class="col-9">
        <div class="top_index">
          <%= render 'public/posts/top_index', posts: @posts %>
        </div>
        <div>
          <% @tags.each do |tag| %>
          <%= link_to tag.title, tag_path(tag), class:"btn btn-outline-info" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
<% elsif admin_signed_in? %>
<% else %>
<div class= "index">
  <div class="container-fluid">
    <div class="row">
      <div class="col-12">
        <div class="top_index">
          <%= render 'public/posts/top_index', posts: @posts %>
        </div>
      </div>
    </div>
  </div>
</div>
<% end %>




