<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>お問い合わせ</h1>
      <%= form_with model:@contact, url: confirm_path, method: :post, local:true do |f| %>
      <%= render 'layouts/error_messages', model: @contact %>
      <div class="form-group">
        <label for="inputName">名前</label>
        <%= f.text_field :name, autofocus: true, placeholder:"名前", class:"form-control" %>
      </div>

      <div class="form-group">
        <label for="inputSubject">タイトル</label>
        	<%= f.text_field :subject, placeholder:"タイトルをお書きください",  class:"form-control" %>
      </div>

      <div class="form-group">
        <label for="inputBody">本文</label>
        <%= f.text_area :body, placeholder:"要件をお書きください", class:"form-control" %>
      </div>

      <div class="form-group">
        <%= f.submit "だげほー", class:"btn btn-success" %>
      </div>
      <% end %>
    </div>
  </div>
</div>
<%= link_to 'ホームページ', root_path, class:"btn btn-success" %>