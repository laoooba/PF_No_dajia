<% post.comments.each do |comment| %>
  <%= image_tag 'no_image.jpg' %>
  <%= comment.comment %>
  <% if comment.user == current_user %>
  <%= link_to post_comment_path(post_id: comment.post, id: comment), method: :delete, remote: true do %>
  <i class="far fa-trash-alt" style="color: red;"></i><br>
  <% end %></i>
  <% else %>
  <br>
  <% end %>
<% end %>