 <%= form_with url: search_path, method: :get, local:true do |f| %>
  <%= f.text_field 'search[content]',placeholder: "投稿の題名を検索してください",  class:"form-control form-control-lg" %>
  <%= f.hidden_field 'search[method]', "部分一致" => "partial" %>
  <%= f.submit '検索', class:"btn btn-outline-primary mt-2" %>
<% end %>
