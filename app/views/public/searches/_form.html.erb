<div class="form-row">
  <div class="row">
    <%= form_with url: search_path, method: :get, class: "form-inline", local:true do |f| %>
      <%= f.text_field 'search[content]',placeholder: "投稿の題名を検索してください",  class: "form-control" %>
      <%= f.hidden_field 'search[method]', "部分一致" => "partial" %>
      <%= f.submit '検索', class:"btn btn-outline-primary" %>
    <% end %>
  </div>
</div>
