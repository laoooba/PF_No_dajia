<%= render 'public/users/mypage', user: @user %>

<div class="container-fluid">
  <div class="row">
    <% @favorites.each do |favorite| %>
      <div class="col-md-3" style="float:left">
        <div class="card m-3 shadow-sm">
          <div class="bd-placeholder-img card-img-top">
            <%= link_to post_path(favorite.post) do %>
              <% if favorite.post.image.attached? %>
              <%= image_tag favorite.post.image, style: "object-fit: contain; width: 100%; height: 190px;" %>
              <% else %>
              <%= image_tag 'heder.png', style: "object-fit: contain; width: 100%; height: 190px;"%>
              <% end %>
            <% end %>
          </div>
          <div class="card-body">
            <h5 class="card-title"><%= favorite.post.title %></h5>
            <p><%= favorite.post.body.truncate(30) %></p>
            <i class="fas fa-heart" style="color: #FF5C8A;"><%= favorite.post.favorites.count %></i>
            <%= time_ago_in_words(favorite.post.created_at) %>前
            <%= link_to "詳細", post_path(favorite.post), class: "btn btn-outline-primary" %>
          </div>
        </div>
      </div>
    <% end %>
    <%= paginate @favorites %>
  </div>
</div>


