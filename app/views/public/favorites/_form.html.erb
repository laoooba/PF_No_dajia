<% if post.favorited_by?(current_user) %>
  <p>
    <%= link_to post_favorite_path(post.id, @user.id), method: :delete, remote: true do %>
      <i class="fas fa-heart fa-7x"></i><%= post.favorites.count %> 
    <% end %>
  </p>
<% else %>
  <p>
    <%= link_to post_favorites_path(post), method: :post, remote: true do %>
      <i class="far fa-heart fa-2x"></i><%= post.favorites.count %> 
    <% end %>
  </p>
<% end %>