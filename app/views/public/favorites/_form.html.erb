<% if post.favorited_by?(current_user) %>
  <p>
    <%= link_to post_favorite_path(post.id, @user.id), method: :delete, remote: true do %>
      <i class="fas fa-heart fa-3x faa-pulse animated" style="color: #FF5C8A;"><%= post.favorites.count %></i>
    <% end %>
  </p>
<% else %>
  <p>
    <%= link_to post_favorites_path(post), method: :post, remote: true do %>
      <i class="far fa-heart fa-2x" style="color:#1565C0;"></i><%= post.favorites.count %>
    <% end %>
  </p>
<% end %>