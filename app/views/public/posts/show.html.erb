<div class="container mx-auto" style="width: 200px;">
  <div class="row">
    <h1><strong>お悩み</strong></h1>
  </div>
</div>
<div class="container mx-auto">
  <div class="row mx-auto px-auto">
    <div class="col-10 mx-auto shadow-sm rounded">
      <table class="table">
        <tbody>
          <tr>
            <td>
              <% if @post.image.attached? %>
              <%= image_tag @post.image.variant(resize:'300x300') %>
              <% else %>
              <%= image_tag 'no_image.jpg' %>
              <% end %>
              </td>
          </tr>
        </tbody>
      </table>
      <table class="table">
        <tbody>
          <tr>
            <th class="px-auto">タイトル</th>
            <td><%= @post.title %></td>
          </tr>
        </tbody>
      </table>
      <table class="table">
        <tbody>
          <tr>
            <th>本文</th>
            <td><%= @post.body %></td>
          </tr>
        </tbody>
      </table>
      <% if @user == current_user %>
      <table class="table">
        <tbody>
          <tr>
            <td><%= link_to '編集', edit_post_path(@post.id), class:"btn btn-success" %></td>
            <td><%= link_to '削除', post_path(@post.id), method: :delete, class:"btn btn-danger" %></rd>
          </tr>
        </tbody>
      </table>
      <% end %>
      <table class="table">
        <tbody>
          <tr>
            <td class="favorite-btn_<%= @post.id %>"><%= render 'public/favorites/form', post: @post %></td>
            <td class="comment"><%= render 'public/comments/index', post: @post %></td>
            <td class="new-comment"><%= render 'public/comments/form', post: @post, comment: @comment %></rd>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>