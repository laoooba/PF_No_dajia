<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>新規投稿</h1>
      <%= form_with model:@post, local:true do |f| %>
      <%= render 'layouts/error_messages', model: @post %>
      <div class="form-group">
        <label for="inputTitle">タイトル</label>
        <%= f.text_field :title, autofocus: true, placeholder:"タイトル", class:"form-control" %>
      </div>
      <div class="form-group">
        <label for="inputTitle">地域を選んでね</label>
        <%= f.collection_select :genre_id, @genres, :id, :title, prompt: "--選択してください--", class: "form-control" %>
      </div>
      <div class="form-group">
        <label for="inputImage">画像</label>
        	<%= f.file_field :image, class:"form-control" %>
      </div>
      
      <div class="form-group">
        <label for="inputBody">本文</label>
        <%= f.text_area :body, placeholder:"サイコー", class:"form-control" %>
      </div>
      <div class="form-group">
        <%= f.submit "だげほー", class:"btn btn-success" %>
      </div>
      <% end %>
    </div>
  </div>
</div>