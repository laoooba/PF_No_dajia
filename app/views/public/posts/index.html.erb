<div class="container">
  <div class="row">
    <div class="col-12 p-2">
      <%= render 'public/searches/form' %>
    </div>
  </div>
</div>
<div class="container-fluid">
  <div class="row">
    <% @posts.each do |post| %>
    <% if post.status == "有効" %>
      <div class="col-md-3" style="float:left">
        <div class="card m-3 shadow-sm">
          <div class="bd-placeholder-img card-img-top">
            <%= link_to post_path(post) do %>
              <% if post.image.attached? %>
              <%= image_tag post.image, style: "object-fit: contain; width: 100%; height: 190px;" %>
              <% else %>
              <%= image_tag 'heder.png', style: "object-fit: contain; width: 100%; height: 190px;"%>
              <% end %>
            <% end %>
          </div>
          <div class="card-body">
            <h5 class="card-title"><%= post.title %></h5>
            <p><%= post.body.truncate(30) %></p>
            <%= time_ago_in_words(post.created_at) %>前
            <%= link_to "詳細", post_path(post), class: "btn btn-outline-primary" %>
          </div>
        </div>
      </div>
    <% end %>
    <% end %>
    <%= paginate @posts %>
  </div>
</div>
