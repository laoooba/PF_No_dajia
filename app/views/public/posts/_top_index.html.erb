<% @posts.each do |post| %>
<% if post.status == "有効" %>
  <div class="col-md-3" style="float:left">
    <div class="card mb-4 shadow-sm">
      <div class="bd-placeholder-img card-img-top">
        <%= link_to post_path(post) do %>
          <% if post.image.attached? %>
          <%= image_tag post.image, style: "object-fit: cover; width: 100%; height: 100%;" %>
          <% else %>
          <%= image_tag 'heder.png', style: "object-fit: cover; width: 100%; height: 100%;"%>
          <% end %>
        <% end %>
      </div>
      <div class="card-body">
        <h5 class="card-title"><small><%= post.title %></small></h5>
        <p><%= time_ago_in_words(post.created_at) %>前</p>
        <%= link_to "詳細", post_path(post), class: "btn btn-outline-success" %>
      </div>
    </div>
  </div>
<% end %>
<% end %>
