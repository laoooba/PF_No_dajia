<div class="container p-2">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>編集画面</h1>
      <%= form_with model:@tag, url: admin_tags_path, local:true do |f| %>
      <div class="form-group">
        <label for="inputTitle">タグ</label>
        <%= f.text_field :title, autofocus: true, placeholder:"タグ", class:"form-control" %>
      </div>
        <%= f.submit "タグ編集", class:"btn btn-outline-success" %>
      </div>
      <% end %>
    </div>
  </div>
</div>