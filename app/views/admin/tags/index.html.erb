<div class="container p-2">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1 class="alert alert-primary mt-1"><strong>タグ</strong></h1>
      <%= form_with model:@tag, url: admin_tags_path, local:true do |f| %>
      <div class="form-group">
        <label for="inputTitle">タグ</label>
        <%= f.text_field :title, autofocus: true, placeholder:"タグ", class:"form-control" %>
      </div>
        <%= f.submit "タグ追加", class:"btn btn-outline-success" %>
      </div>
      <% end %>
    </div>
  </div>
</div>


<div class="container p-3">
  <div class="row ">
    <div class="col-12 d-flex flex-wrap">
      <% @tags.each do |tag| %>
      <div class="genre col-4 p-2">
        <span class="badge badge-pill badge-info"><%= tag.title %></span>
        <%= link_to "編集", edit_admin_tag_path(tag), class:"btn btn-outline-success" %>
      </div>
      <% end %>
    </div>
  </div>
</div>
