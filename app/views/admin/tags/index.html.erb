<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>新規投稿</h1>
      <%= form_with model:@tag, url: admin_tags_path, local:true do |f| %>
      <div class="form-group">
        <label for="inputTitle">タグ</label>
        <%= f.text_field :title, autofocus: true, placeholder:"タグ", class:"form-control" %>
      </div>
        <%= f.submit "タグ追加", class:"btn btn-success" %>
      </div>
      <% end %>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <% @tags.each do |tag| %>
      <table>
        <thead>
          <tr>
            <th>ジャンル</th>
          </tr>
          <tbody>
            <tr>
              <td><%= tag.title %></td>
              <td><%= link_to "編集", edit_admin_tag_path(tag), class:"btn btn-success" %></td>
            </tr>
          </tbody>
      </table>
      <% end %>
    </div>
  </div>
</div>