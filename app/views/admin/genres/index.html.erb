<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1 class="alert alert-primary mt-1"><strong>ジャンル</strong></h1>
      <%= form_with model:@genre, url: admin_genres_path, local:true do |f| %>
      <div class="form-group">
        <label for="inputTitle">ジャンル</label>
        <%= f.text_field :title, autofocus: true, placeholder:"ジャンル", class:"form-control form-control-lg" %>
      </div>

        <div class="form-group">
        <label for="inputImage">画像</label>
        	<%= f.file_field :image, class:"form-control form-control-lg" %>
        </div>
        <%= f.submit "ジャンル追加", class:"btn btn-outline-success" %>
      </div>
      <% end %>
    </div>
  </div>
</div>


<div class="container p-3">
  <div class="row ">
    <div class="col-12 d-flex flex-wrap">
      <% @genres.each do |genre| %>
      <div class="genre col-4">
        <% if genre.image.attached? %>
          <%= image_tag genre.image,  style: "object-fit: contain; width: 100px; height: 100px;" %>
        <% else %>
          <%= image_tag 'heder1.png', style: "object-fit: contain; width: 100px; height: 100px;" %>
        <% end %>
        <%= genre.title %>
        <%= link_to "編集", edit_admin_genre_path(genre), class:"btn btn-outline-success" %>
      </div>
      <% end %>
    </div>
  </div>
</div>
