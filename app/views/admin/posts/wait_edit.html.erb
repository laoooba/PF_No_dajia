<div class="container mx-auto">
  <div class="row mx-auto p-3">
    <div class="col-12 mx-auto shadow-sm rounded">
      <h1 class="alert alert-primary"><strong>投稿一覧</strong></h1>
      <table class="table table-hover">
        <thead>
          <tr>
            <th scope="col" style="width: 180px;">氏名</th>
            <th scope="col" style="width: 180px;">写真</th>
            <th scope="col" style="width: 180px;">タイトル</th>
            <th scope="col" style="width: 180px;">ステータス</th>
            <th scope="col" style="width: 180px;"></th>
          </tr>
        </thead>
        <% @posts.each do |post| %>
        <% unless post.status == "有効" %>
        <tbody>
        <tr>
          <th><%= post.user.name %></th>
          <td>
            <% if post.image.attached? %>
              <%= image_tag post.image, style: "object-fit: contain; width: 70px; height: 70px;" %>
            <% else %>
              <%= image_tag 'heder.png', style: "object-fit: contain; width: 70px; height: 70px;" %>
            <% end %>
          </td>
          <td><%= post.title %></td>
          <td><%= post.status %></td>
          <td><%= link_to "詳細", admin_post_path(post), class: "btn btn-outline-primary mr-1" %></td>
        </tr>
        </tbody>
        <% end %>
        <% end %>
      </table>
    </div>
    <%= paginate @posts %>
  </div>
</div>
