<div class="container mx-auto">
  <div class="row mx-auto p-3">
    <div class="col-12 mx-auto shadow-sm rounded">
      <h1 class="alert alert-primary"><strong>会員一覧</strong></h1>
      <table class="table table-hover">
        <thead>
          <tr>
            <th scope="col" style="width: 180px;">会員ID</th>
            <th scope="col" style="width: 180px;">氏名</th>
            <th scope="col" style="width: 180px;">フォロワー</th>
            <th scope="col" style="width: 180px;">ステータス</th>
            <th scope="col" style="width: 180px;"></th>
          </tr>
        </thead>
        <% @users.each do |user| %>
        <tbody>
        <tr>
          <th><%= user.id %></th>
          <td><%= user.name %></td>
          <td><%= user.followers.count %></td>
          <td><% if user.is_deleted == true %>
          <p class="text-muted">退会</p>
          <% elsif user.is_deleted == false %>
          <p class="text-success">有効</p>
          <% end %>
          </td>
          <td><%= link_to "編集", edit_admin_user_path(user), class: "btn btn-outline-primary mr-1" %></td>
        </tr>
        </tbody>
        <% end %>
      </table>
    </div>
    <%= paginate @users %>
  </div>
</div>

